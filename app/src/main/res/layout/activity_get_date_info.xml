<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07354A"
    android:onClick="onClick"
    android:orientation="vertical"
    tools:context=".Get_date_info">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#07354A"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="15dp">

                <EditText
                    android:id="@+id/date_info_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:background="@color/material_dynamic_neutral90"
                    android:hint="@string/day_month_year"
                    android:inputType="text"
                    android:padding="17dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp"
                    tools:ignore="TextFields" />

                <Switch
                    android:id="@+id/b_switch_current_data_activity_get_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/material_dynamic_neutral90"
                    android:checked="false"
                    android:text="@string/b_cur_data_get_info"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />
            </LinearLayout>

            <Button
                android:id="@+id/b_get_info_about_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/icons8_info_35"
                android:insetLeft="5dp"
                android:insetTop="10dp"
                android:insetRight="5dp"

                android:insetBottom="10dp"

                android:onClick="onClick"

                android:text="@string/get_info"
                android:textSize="25sp"
                app:cornerRadius="30dp" />


            <Button
                android:id="@+id/clear_button_get_date_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="#7C8183"
                android:drawableLeft="@drawable/icons8_trash_35"
                android:insetLeft="5dp"
                android:insetTop="10dp"

                android:insetRight="5dp"

                android:insetBottom="10dp"
                android:text="@string/restart"

                android:textColor="@color/white"
                android:textSize="25sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/b_to_main2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:backgroundTint="#1AB515"
                android:drawableLeft="@drawable/icons8_home_page_35"
                android:insetLeft="5dp"
                android:insetTop="10dp"

                android:insetRight="5dp"
                android:insetBottom="10dp"

                android:onClick="onClick"
                android:text="@string/main_menu"

                android:textColor="@color/white"
                android:textSize="25sp"

                app:cornerRadius="30dp"

                />


            <!--<TextSwitcher
                android:id="@+id/textSwitcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inAnimation="@anim/fade_in"
                android:outAnimation="@anim/fade_out"/>-->


            <TextView
                android:id="@+id/info_result_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#07354A"
                android:onClick="onClick"
                android:text="@string/infoAboutDateTextView"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>